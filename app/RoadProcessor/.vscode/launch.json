    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}"
        },
        {
            "name": "(gdb) Launch RoadProcessor",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/../../t2-output/linux-clang-debug-default/RoadProcessor",
            //"args": [
            //    "perspective",
            //    "/home/ben/win/c/mldata/DSCF3023.MOV",
            //],
            "args": [
                "webtiles",
                "/home/ben/inf",
            ],
            //"args": [
            //    "--lens",
            //    "Fujifilm X-T2,Samyang 12mm f/2.0 NCS CS",
            //    "stitch2",
            //    "-s",
            //    "17",
            //    "-n",
            //    "2",
            //    "/home/ben/win/c/mldata/DSCF3023.MOV",
            //    "0",
            //    "-0.000995",
            //],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/../../t2-output/linux-clang-debug-default"
                }
            ],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}