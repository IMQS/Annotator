    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch RoadProcessor",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/../../t2-output/linux-clang-debug-default/RoadProcessor",
            //"args": [
            //    "perspective",
            //    "/home/ben/win/c/mldata/DSCF3023.MOV",
            //],
            "args": [
                "--lens",
                "Fujifilm X-T2,Samyang 12mm f/2.0 NCS CS",
                "stitch2",
                "-s",
                "0.7",
                "-n",
                "3",
                "/home/ben/win/c/mldata/DSCF3023.MOV",
                "0",
                "-0.000980",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/../../t2-output/linux-clang-debug-default"
                }
            ],
            "externalConsole": true,
            "MIMode": "gdb",
            //"setupCommands": [
            //    {
            //        "description": "Enable pretty-printing for gdb",
            //        "text": "-enable-pretty-printing",
            //        "ignoreFailures": true
            //    }
            //]
        },
    ]
}