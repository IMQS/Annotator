{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch RoadProcessor",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/../../t2-output/linux-clang-debug-default/RoadProcessor",
            "args": [
                "speed",
                "/home/ben/win/c/mldata/StellenboschFuji/4K-F2/DSCF1008.MOV"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/../../t2-output/linux-clang-debug-default"
                }
            ],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}